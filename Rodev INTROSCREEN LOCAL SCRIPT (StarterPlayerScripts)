-- BLA BLA BLA STYLE COMMENTS
-- FULL SCRIPT - COMMENTS ONLY TRANSLATED

local TweenService = game:GetService("TweenService")
local Players = game:GetService("Players")
local player = Players.LocalPlayer
local camera = workspace.CurrentCamera

-------------------------------------------------
-- DISABLE ALL UI AT START
-------------------------------------------------

local playerGui = player:WaitForChild("PlayerGui")

-- WAIT UNTIL ALL UI IS LOADED
task.wait(0.5)

-- DISABLE ALL UI EXCEPT LOADING SCREEN
for _, ui in pairs(playerGui:GetChildren()) do
	if ui:IsA("ScreenGui") and ui.Name ~= "LoadingScreen" then
		ui.Enabled = false
	end
end

-------------------------------------------------
-- CREATE SCREEN GUI
-------------------------------------------------

local gui = Instance.new("ScreenGui")
gui.Name = "LoadingScreen"
gui.ResetOnSpawn = false
gui.IgnoreGuiInset = true
gui.Parent = playerGui

-------------------------------------------------
-- CREATE MAIN FRAME
-------------------------------------------------

local frame = Instance.new("Frame")
frame.Name = "mainMenu"
frame.Size = UDim2.fromScale(0.4, 0.8)
frame.Position = UDim2.fromScale(0.05, 0.1)
frame.AnchorPoint = Vector2.new(0, 0)
frame.BackgroundTransparency = 1
frame.BorderSizePixel = 0
frame.Parent = gui

-------------------------------------------------
-- CREATE TITLE LABEL
-------------------------------------------------

local titleLabel = Instance.new("TextLabel")
titleLabel.Name = "TitleLabel"
titleLabel.Size = UDim2.fromScale(0.8, 0.15)
titleLabel.Position = UDim2.fromScale(0.1, 0.1)
titleLabel.Text = "Welcome to: The Abyssal"
titleLabel.TextScaled = true
titleLabel.TextColor3 = Color3.new(1, 1, 1)
titleLabel.BackgroundTransparency = 1
titleLabel.FontFace = Font.new("rbxasset://fonts/families/PressStart2P.json")
titleLabel.TextTransparency = 1
titleLabel.Parent = frame

-------------------------------------------------
-- CREATE SCROLLING FRAMES
-------------------------------------------------

-- UPDATE LOG SCROLLING FRAME
local updateScrollFrame = Instance.new("ScrollingFrame")
updateScrollFrame.Name = "UpdateScrollFrame"
updateScrollFrame.Size = UDim2.fromScale(0.8, 0.65)
updateScrollFrame.Position = UDim2.fromScale(0.1, 0.2)
updateScrollFrame.BackgroundColor3 = Color3.fromRGB(20, 20, 20)
updateScrollFrame.BackgroundTransparency = 0.3
updateScrollFrame.BorderSizePixel = 3
