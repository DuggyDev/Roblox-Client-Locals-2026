-------------------------------------------------
-- CREATE BUTTON FUNCTION
-------------------------------------------------

local function createButton(name, text, positionY)
	local btn = Instance.new("TextButton")
	btn.Name = name
	btn.Size = UDim2.fromScale(0.8, 0.08)
	btn.Position = UDim2.fromScale(0.1, positionY)
	btn.Text = text
	btn.TextScaled = true
	btn.BackgroundColor3 = Color3.fromRGB(25,25,25)
	btn.TextColor3 = Color3.fromRGB(255,255,255)
	btn.BorderSizePixel = 0
	btn.FontFace = Font.new("rbxasset://fonts/families/PressStart2P.json")
	btn.Parent = frame
	btn.Visible = false
	btn.TextTransparency = 1

	-- BUTTON HOVER EFFECT
	btn.MouseEnter:Connect(function()
		TweenService:Create(btn, TweenInfo.new(0.2), {
			BackgroundColor3 = Color3.fromRGB(45,45,45)
		}):Play()
	end)

	btn.MouseLeave:Connect(function()
		TweenService:Create(btn, TweenInfo.new(0.2), {
			BackgroundColor3 = Color3.fromRGB(25,25,25)
		}):Play()
	end)

	return btn
end

-------------------------------------------------
-- CREATE ALL BUTTONS
-------------------------------------------------

local lobbyButton = createButton("LobbyButton","Go to Lobby",0.38)
local updateButton = createButton("UpdateButton","Update Log",0.48)
local creditsButton = createButton("CreditsButton","Credits",0.58)
local badgesButton = createButton("BadgesButton","Badges",0.68)

-------------------------------------------------
-- CLOSE BUTTON (IMAGE BUTTON)
-------------------------------------------------

local closeButton = Instance.new("ImageButton")
closeButton.Name = "CloseButton"
closeButton.Size = UDim2.fromScale(0.08, 0.08)
closeButton.Position = UDim2.fromScale(0.88, 0.05)
closeButton.Image = "rbxassetid://79236591653756"
closeButton.BackgroundTransparency = 1
closeButton.ImageTransparency = 1
closeButton.Parent = frame
closeButton.Visible = false

-------------------------------------------------
-- BLACK SCREEN FOR INTRO
-------------------------------------------------

local blackFrame = Instance.new("Frame")
blackFrame.Name = "BlackScreen"
blackFrame.Size = UDim2.new(1,0,1.5,0)
blackFrame.Position = UDim2.new(0,0,-0.25,0)
blackFrame.BackgroundColor3 = Color3.new(0,0,0)
blackFrame.BorderSizePixel = 0
blackFrame.Parent = gui

-------------------------------------------------
-- CAMERA SETUP
-------------------------------------------------

local intro = workspace:WaitForChild("Intro", 10)
if not intro then
	warn("INTRO FOLDER NOT FOUND")
	return
end

local menuCams = intro:WaitForChild("MenuCams", 5)
local camStart = intro:WaitForChild("camStart", 5)
local camEnd = intro:WaitForChild("CamEnd", 5)
local updateCam = menuCams:FindFirstChild("UpdatelogCam")
local creditsCam = menuCams:FindFirstChild("CreditsCam")
local badgesCam = menuCams:FindFirstChild("BadgesCam")

camera.CameraType = Enum.CameraType.Scriptable
camera.CFrame = camStart.CFrame

-------------------------------------------------
-- INTRO CAMERA TWEEN
-------------------------------------------------

task.wait(3)

TweenService:Create(camera,
	TweenInfo.new(4,Enum.EasingStyle.Sine,Enum.EasingDirection.InOut),
	{CFrame = camEnd.CFrame}
):Play()

-------------------------------------------------
-- SHOW MAIN MENU
-------------------------------------------------

task.delay(4,function()
	frame.Visible = true
	titleLabel.Visible = true
	lobbyButton.Visible = true
	updateButton.Visible = true
	creditsButton.Visible = true
	badgesButton.Visible = true
	closeButton.Visible = true
end)

-------------------------------------------------
-- BUTTON ACTIONS
-------------------------------------------------

updateButton.MouseButton1Click:Connect(function()
	if updateCam then
		camera.CFrame = updateCam.CFrame
		updateScrollFrame.Visible = true
	end
end)

creditsButton.MouseButton1Click:Connect(function()
	if creditsCam then
		camera.CFrame = creditsCam.CFrame
		creditsLabel.Visible = true
	end
end)

badgesButton.MouseButton1Click:Connect(function()
	if badgesCam then
		camera.CFrame = badgesCam.CFrame
		badgesScrollFrame.Visible = true
	end
end)

-------------------------------------------------
-- GO TO LOBBY BUTTON
-------------------------------------------------

lobbyButton.MouseButton1Click:Connect(function()
	gui.Enabled = false
	camera.CameraType = Enum.CameraType.Custom
end)


