updateScrollFrame.ScrollBarThickness = 15
updateScrollFrame.CanvasSize = UDim2.fromScale(0, 2)
updateScrollFrame.Parent = frame
updateScrollFrame.Visible = false

local updateTextLabel = Instance.new("TextLabel")
updateTextLabel.Name = "UpdateText"
updateTextLabel.Size = UDim2.fromScale(0.95, 1)
updateTextLabel.Position = UDim2.fromScale(0.025, 0)
updateTextLabel.Text = "Not Yet!"
updateTextLabel.TextSize = 32
updateTextLabel.TextColor3 = Color3.fromRGB(255, 255, 255)
updateTextLabel.BackgroundTransparency = 1
updateTextLabel.FontFace = Font.new("rbxasset://fonts/families/PressStart2P.json")
updateTextLabel.TextWrapped = true
updateTextLabel.TextXAlignment = Enum.TextXAlignment.Left
updateTextLabel.TextYAlignment = Enum.TextYAlignment.Top
updateTextLabel.Parent = updateScrollFrame

-- BADGES SCROLLING FRAME
local badgesScrollFrame = Instance.new("ScrollingFrame")
badgesScrollFrame.Name = "BadgesScrollFrame"
badgesScrollFrame.Size = UDim2.fromScale(0.8, 0.65)
badgesScrollFrame.Position = UDim2.fromScale(0.1, 0.2)
badgesScrollFrame.BackgroundColor3 = Color3.fromRGB(20, 20, 20)
